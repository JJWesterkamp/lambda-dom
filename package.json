{
  "name": "lambda-dom",
  "version": "1.1.1",
  "description": "Some DOM helper functions for programming web projects in a functional style.",
  "keywords": [
    "dom",
    "library",
    "typescript",
    "javascript",
    "fp",
    "curried",
    "functional programming"
  ],
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./lambda-dom.d.ts",
  "sideEffects": false,
  "scripts": {
    "dev": "run-p \"build:** -- --watch\"",
    "build": "npm run clean:dist && run-p build:**",
    "build:cjs": "tsc",
    "build:esm": "tsc -m es6 --outDir esm",
    "build:umd": "webpack",
    "build:declaration": "dts-bundle-generator -o lambda-dom.d.ts src/index.ts --umd-module-name LD --no-banner",
    "build:docs": "typedoc src",
    "clean:dist": "rm -rf esm cjs umd",
    "test": "jest",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "bump": "npx yarn version --new-version",
    "preversion": "npm run build:declaration && npm run build:docs && git reset && git add ./lambda-dom.d.ts ./CHANGELOG.md ./docs/*",
    "prepublishOnly": "npm-run-all test build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JJWesterkamp/lambda-dom.git"
  },
  "author": "Jeffrey Westerkamp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JJWesterkamp/lambda-dom/issues"
  },
  "homepage": "https://github.com/JJWesterkamp/lambda-dom#readme",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/jsdom": "^16.2.5",
    "@types/webpack-env": "^1.15.3",
    "coveralls": "^3.1.0",
    "dts-bundle-generator": "^5.5.0",
    "jest": "^26.6.3",
    "jsdom": "^16.4.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "tslib": "^2.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0"
  }
}
